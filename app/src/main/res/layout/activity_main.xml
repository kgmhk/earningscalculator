<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gkwak.earningscalculator.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="@string/expect_market_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:id="@+id/expect_market_price"
                        android:gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ads:srcCompat="@android:drawable/ic_menu_help"
                        android:background="@drawable/help_btn_selector"
                        android:id="@+id/expect_market_price_help_button"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rent_deposit_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/rent_deposit"
                        android:textSize="10sp"
                        android:id="@+id/rent_deposit_text"
                        android:layout_width="100dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/rent_deposit_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="10sp"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:id="@+id/textView2"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/monthly_rent_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_rent"
                        android:textSize="10sp"
                        android:id="@+id/monthly_rent_text"
                        android:layout_width="100dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textSize="10sp"
                        android:id="@+id/monthly_rent_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="right|center_vertical"
                        android:inputType="number" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView"
                        android:textSize="10sp"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/market_price_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/market_price"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/market_price_text"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/market_price_edit"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginRight="5dp"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView3"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="@string/cal_rent_revenu_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/cal_rent_revenu_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ads:srcCompat="@android:drawable/ic_menu_help"
                        android:background="@drawable/help_btn_selector"
                        android:id="@+id/cal_rent_revenu_help_button"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/buy_total_price_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/buy_total_price"
                        android:textSize="10sp"
                        android:id="@+id/buy_total_price_text"
                        android:layout_width="100dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:textSize="10sp"
                        android:id="@+id/buy_total_price_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView4"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loan_price_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/loan_price"
                        android:textSize="10sp"
                        android:id="@+id/loan_price_text"
                        android:layout_width="100dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="10sp"
                        android:ems="10"
                        android:id="@+id/loan_price_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView5"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/loan_rate_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/loan_rate"
                        android:textSize="10sp"
                        android:id="@+id/loan_rate_text"
                        android:layout_width="100dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned|numberDecimal"
                        android:ems="10"
                        android:textSize="10sp"
                        android:id="@+id/loan_rate_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/percent"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView6"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="@string/cal_rent_revenu_result_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/cal_rent_revenu_result_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        android:gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/help_btn_selector"
                        ads:srcCompat="@android:drawable/ic_menu_help"
                        android:id="@+id/cal_rent_revenu_result_help_button"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/rent_rate_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/rent_rate"
                        android:id="@+id/rent_rate_text"
                        android:elevation="0dp"
                        android:textSize="20sp"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rent_rate_edit"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="1"
                        android:layout_marginRight="5sp"
                        android:text="0"
                        android:gravity="right|center_vertical"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/percent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView7"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/real_investment_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/real_investment"
                        android:id="@+id/real_investment_text"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/real_investment_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:layout_marginRight="5sp"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView8"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/yearly_rent_revenu_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/yearly_rent_revenu"
                        android:id="@+id/yearly_rent_revenu_text"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yearly_rent_revenu_edit"
                        android:layout_weight="1"
                        android:layout_marginRight="5sp"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView9"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/yearly_interest_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/yearly_interest"
                        android:id="@+id/yearly_interest_text"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yearly_interest_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:layout_marginRight="5sp"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView10"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/yearly_pure_revenu_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/yearly_pure_revenu"
                        android:id="@+id/yearly_pure_revenu_text"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:id="@+id/yearly_pure_revenu_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView11"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:id="@+id/monthly_pure_revenu_layout">

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_pure_revenu"
                        android:id="@+id/monthly_pure_revenu_text"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5sp"
                        android:id="@+id/monthly_pure_revenu_edit"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="right|center_vertical" />

                    <TextView
                        android:text="@string/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView12"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- view for AdMob Banner Ad -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
